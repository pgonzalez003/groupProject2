<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-4">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <h2>Pick 'em</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <div id="games"></div>
      </div>
      <div class="col-lg-8">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Enter Username</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="MarlinsWS2020">
          </div>
          <div class="form-group">
            <label for="example-text">Enter Game ID</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="1500075223">
          </div>
          <div class="form-group">
            <label for="example-text">Pick Winner</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Toronto Blues">
          </div>
          <div class="form-group">
            <label for="example-text">Wager</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="$200.00">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div id="odds">
          hello
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
<script type='text/javascript' src='../config.js'></script>

