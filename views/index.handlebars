<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="logo">
          <span class="word1">The</span>
          <span class="word2">House</span>
        </h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12" id="gameArea">
        <h2>Games</h2>
        <div id="games"></div>
      </div>

      <div id="inputUser">
        <div class="col-lg-12">
          <h2>Pick 'em</h2>
          <form class="clearfix mb-4" action="POST">
            <div class="form-group">
              <label for="example-text">Enter Username</label>
              <input type="text" id="name" class="form-control" aria-describedby="example-text" placeholder="Baseball-Fan8">
            </div>
            <button id="submit" class="btn btn-primary float-right">Submit</button>
          </form>
        </div>

      </div>
    </div>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        <h3>Entries:</h3>
        <ul id="example-list" class="list-group">
          {{#each users}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="api/users/{{this.id}}">{{this.username}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="col-2"></div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
<script type='text/javascript' src='../config.js'></script>
<script type="text/javascript" src="../add.js"></script>